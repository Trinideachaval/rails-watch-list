<div class="banner">
  <h1>MY LISTS</h1>
</div>

<div class="container">
  <div class="row">
    <% @lists.each do |list|  %>
      <div class="col-sm-6 col-md-4 mb-3 d-flex justify-content-center">
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%=list.random_image%>); object-fit: cover;">
           <%= link_to list.name, list_path(list) %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<%= link_to "create a list", new_list_path, class: "btn btn-info" %>
